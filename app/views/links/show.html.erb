<h1><%= @link.link %></h1>
<h5>Submitted <%= time_ago_in_words(@link.created_at) %> earlier by <%= @link.user.email %></h5>
<h5><%=link_to "Go to Website", @link.url ,class: "btn btn-primary"%></h5>
 <% if user_signed_in? %>
<% if @link.user_id == current_user.id %>
	<div class="btn btn-group">
        <%= link_to 'Edit', edit_link_path(@link), class: "btn btn-default"  %>
 <% end %>
</div>
<% end %>
 <div class="btn-group">
 	<a class="btn btn-default" href= "<%= @link.url %>">Visit Links </a>
 	<%= link_to link_like_path(@link),:data => {:method => :put},class: "btn btn-default" do %>
 	<span class="glyphicon glyphicon-chevron-up"></span>
 	upvote
 	<%= @link.get_upvotes.size %>
  <%end%>

 <%= link_to link_dislike_path(@link),method: :put,class: "btn btn-default" do %>
 	<span class="glyphicon glyphicon-chevron-down"></span>
 	downvote
 	<%= @link.get_downvotes.size %>         
 	<% end %>
 	</div>




